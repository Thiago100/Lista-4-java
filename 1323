import java.util.*;
import java.io.*;
public class Main {
    public static void main(String[] args) {
		PrintStream sa = System.out;
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt(),i=0,a=0;
		double q;
		while(n!=0){
            for(i=0;i<n;i++){
                q = Math.pow((n-i),2);
                a+=(int)q;
            }
            sa.println(a);
            n = sc.nextInt();
            a = 0;
		}

   }
}
