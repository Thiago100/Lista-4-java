import java.util.Scanner;
import java.io.*;
public class Main {
    public static void main(String[] args) {
		PrintStream sa = System.out;
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		while(a!=0){
			for(int i=0;i<a;i++){
				int x = sc.nextInt();
				if(x%2==1) sa.println(x*2-1);
				else sa.println(x*2-2);
			}
			a = sc.nextInt();
		}
		     
   }
}
